&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span> {
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span> sentence: &lt;span style="color:#dc322f">inputValue&lt;/span>,
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span> });
